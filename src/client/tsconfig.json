{
  "compilerOptions": {
    "jsx": "react",
    "target": "es2019",
    "module": "esnext",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "sourceMap": true,
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,
    "outDir": "../../build",
    "lib": ["es2019", "dom"],
    "rootDir": "../",
    "types": ["node"],
    "paths": {
      "*": ["../../node_modules/*"],
      "@app": ["./app"],
      "@components": ["./app/components"],
      "@pages": ["./app/pages"],
      "@shared": ["../shared"],
      "@types": ["./app/types"]
    },
    "typeRoots": ["node_modules/@types"]
  },
  "include": ["**/*.ts", "**/*.tsx", "**/*.d.ts"],
  "exclude": ["**/server/*"],
  "references": [
    {
      "path": "../shared"
    }
  ]
}
