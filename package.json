{
  "name": "fullstack-ts",
  "version": "1.0.0",
  "main": "build/server/index.js",
  "repository": "https://github.com/cdleveille/fullstack-ts.git",
  "author": "Chris Leveille <cdleveille@gmail.com>",
  "description": "MERN stack monorepo template with types shared between server and client.",
  "license": "MIT",
  "scripts": {
    "prepare": "husky install",
    "lint": "eslint --ext .js,.jsx,.ts,.tsx . && prettier --check .",
    "format": "eslint --fix --ext .js,.jsx,.ts,.tsx . && prettier --write .",
    "build": "rimraf build && concurrently --prefix \"[{name}]\" --names \"SERVER,CLIENT\" -c \"bgBlue.bold,bgGreen.bold\" \"yarn build:server\" \"yarn build:client\"",
    "build:server": "rimraf build/server && rimraf build/shared && tsc -b ./src/server && tsc-alias",
    "build:client": "rimraf build/client && webpack",
    "dev": "concurrently --prefix \"[{name}]\" --names \"SERVER,CLIENT\" -c \"bgBlue.bold,bgGreen.bold\" \"yarn dev:server\" \"yarn dev:client\"",
    "dev:server": "ts-node-dev --respawn --transpile-only --project ./src/server/tsconfig.json -r tsconfig-paths/register ./src/server/index.ts",
    "dev:client": "webpack watch",
    "start": "node ."
  },
  "dependencies": {
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "express": "^4.18.2",
    "helmet": "^6.1.5",
    "mongodb": "^5.3.0",
    "mongoose": "^7.0.4",
    "morgan": "^1.10.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "socket.io": "^4.6.1",
    "socket.io-client": "^4.6.1",
    "tslib": "^2.5.0"
  },
  "devDependencies": {
    "@babel/core": "^7.21.4",
    "@babel/plugin-transform-runtime": "^7.21.4",
    "@babel/preset-env": "^7.21.4",
    "@types/compression": "^1.7.2",
    "@types/cors": "^2.8.12",
    "@types/express": "^4.17.17",
    "@types/morgan": "^1.9.3",
    "@types/node": "^18.15.12",
    "@types/react": "^18.0.37",
    "@types/react-dom": "^18.0.11",
    "@types/webpack": "^5.28.1",
    "@typescript-eslint/eslint-plugin": "^5.59.0",
    "@typescript-eslint/parser": "^5.59.0",
    "babel-loader": "^9.1.0",
    "concurrently": "^8.0.1",
    "css-loader": "^6.7.2",
    "dotenv": "^16.0.3",
    "eslint": "^8.38.0",
    "eslint-config-prettier": "^8.8.0",
    "html-webpack-plugin": "^5.5.1",
    "husky": "^8.0.2",
    "javascript-obfuscator": "^4.0.2",
    "prettier": "^2.8.7",
    "rimraf": "^5.0.0",
    "style-loader": "^3.3.2",
    "ts-loader": "^9.4.1",
    "ts-node-dev": "^2.0.0",
    "tsc-alias": "^1.8.5",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.0.4",
    "webpack": "^5.80.0",
    "webpack-cli": "^5.0.1",
    "webpack-obfuscator": "^3.5.1",
    "workbox-webpack-plugin": "^6.5.4"
  }
}
